<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DefBtn" parent="AppTheme">
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="DefBtn.Primary" parent="DefBtn">
        <item name="android:background">@drawable/btn_primary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DefBtn.Secondary" parent="DefBtn">
        <item name="android:background">@drawable/btn_secondary</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TitleGlow" parent="AppTheme">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:shadowColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:shadowRadius">15</item>
    </style>
</resources>
